<%- include("../Views/Layouts/header.ejs"); %>
    <section class="">
        <section class="bg text-light m-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 download-margin">

                        <h3 class="text-margin mobile-margin">We are All in one Social Media Downloder</h3>
                        <p class="para-text-margin">Copy and paste your videos links and download your video free of cost</p>
                        <!------>
                        <div class="card p-3 shadow bg2 br div-card mobile-div_card">
                            <div class="mt-4">
                                <form method="post" id="formdata" autocomplete="on">
                                    <small id="error" class="text-danger mb-2"></small>
                                    <h6 class="text-dark">Download Your Video</h6>
                                    <small class="text-dark">Enter And Paste Your Link Here ..</small>
                                    <input type="url" class="form-control form-control-sm mt-3 br"
                                        placeholder="Enter Your Link" name="allvalue" required>
                                    <input type="submit" class="btn btn-sm btn-primary mt-3" value="Download">
                                </form>
                            </div>
                            <% if(typeof(youtube)!=="undefined" ){ %>
                                <div class="card p-3 shadow bg2 br mt-3 video-card mobile-card">
                                    <div class="row">
                                        <div class="col-lg-6 img_div">
                                            <img src="<%=data[0].pictureUrl%>" class="mobile_div br" alt="Sorry Thumb not Availbel"
                                                class="text-dark "><br>
                                        </div>

                                        <div class="col-lg-6 ms-2 download_div">
                                            <a href="<%=data[0].urls[0].url%>" download="<%=data[0].urls[0].url%>"
                                                class="btn btn-sm btn-primary mt-3 low_download mobile-download_btn">Low Quality
                                                Download</a><br>
                                            <a href="<%=data[0].urls[1].url%>" download="<%=data[0].urls[1].url%>"
                                                class="btn btn-sm btn-primary mt-3 high_download">HD Quality
                                                Download</a><br>
                                        </div>
                                    </div>
                                </div>
                                <% } else if(typeof(instadata)!=="undefined" ){ %>
                                    <div class="card p-3 shadow bg2 br instag mt-3">
                                        <div class="row">
                                            
                                            <div class="col-lg-6">

                                                <img src="Pictures/thumbnail.png" class="card-thumnail">
                                                     <a href="<%=instadata.url%>" download="<%=instadata.url%>" class="btn btn-sm btn-primary mt-2 br ins-btn">Download</a>                                              
                                             </div>

                                            <div class="col-lg-6">
                                                <img src="Pictures/ins.jpg" alt="Sorry Thumb not Availbel"
                                                    class="text-dark br ins-img"><br>
                                            </div>
                                        </div>
                                    </div>
                                    <% } else if(typeof(data)!=="undefined" ){ %>
                                        <div class="card p-3 shadow bg2 br w-75 mt-3 fb-mar">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <img src="<%=data[0].pictureUrl%>" alt="Sorry Thumb not Availbel"
                                                        class="text-dark br Facebook_img"><br>
                                                    <a href="<%=data[0].urls[1].url%>"
                                                        download="<%=data[0].urls[1].url%>"
                                                        class="btn btn-sm btn-primary mt-3 br low_facebook">Download Low</a>
                                                    <a href="<%=data[0].urls[0].url%>"
                                                        download="<%=data[0].urls[0].url%>"
                                                        class="btn btn-sm btn-primary mt-3 br">Download High</a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } else if(typeof(tiktokdata)!=="undefined" ){ %>
                                            <div class="card p-3 shadow bg2 br w-75 mt-3 tik-card">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <img src="<%= tiktokdata.data.cover%>"
                                                            alt="Sorry Thumb not Availbel"
                                                            class="text-dark tik-img br h-50"><br>
                                                        <a href="<%= tiktokdata.data.hdplay%>"
                                                            download="<%= tiktokdata.data.hdplay%>"
                                                            class="btn btn-sm btn-primary mt-2 tik-btn br">Download </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } else if(typeof(pintrestdata)!=="undefined" ){ %>
                                                <div class="card p-3 shadow bg2 br w-75 mt-3 pintrest_download">
                                                    <div class="row pintrest_card">
                                                        <div class="col-lg-6">
                                                            <img src="<%=pintrestdata.thumbnail%>"
                                                                alt="Sorry Thumb not Availbel"
                                                                class="text-dark br pintrest_img"><br>
                                                            <a href="<%=pintrestdata.url%>"
                                                                download="<%=pintrestdata.url%>"
                                                                class="btn btn-sm btn-primary mt-3 br pintrest_">Download
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } else { %>
                                                    <%if (typeof(message) !=="undefined" ) { %>
                                                        <div class="card p-3 shadow bg2 br w-75 mt-3">
                                                            <small class="text-danger">
                                                                <%=message%>
                                                            </small>
                                                        </div>
                                                        <% } %>
                                                            <% } %>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-5">
                        <img src="Pictures/sml.png" class="w-100 move" alt="">
                    </div>
                </div>
            </div>
        </section>
    </section>
